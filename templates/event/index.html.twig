{% extends 'baseAdmin.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Liste des Evennements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ville</th>
                <th>Date</th>
                <th>Nb. Place</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.city }}</td>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ event.place }}</td>
                <td>
                    <a href="{{ path('event_show', {'id': event.id}) }}">Voir</a>
                    <a href="{{ path('event_edit', {'id': event.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun évemement prévu</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('event_new') }}">Ajouter</a>
{% endblock %}
